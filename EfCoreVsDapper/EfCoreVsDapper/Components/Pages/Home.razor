@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

@if (DapperUsers is { Count: > 0 })
{
    UserList(DapperUsers);
}

@if (EfCoreUsers is { Count: > 0 })
{
    UserList(EfCoreUsers);
}

@code {
    RenderFragment UserList(List<User> users) =>
    @<div>
        <h2>@users.Count</h2>
        <ul>
            @foreach (var user in users)
        {
            <li>@user.Name</li>
        }
        </ul>
    </div>;
}
